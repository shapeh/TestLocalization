@{
    var lang = Context.GetRouteValue("lang").ToString();
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm bg-light border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-page="/Index" asp-route-lang="@lang">TestLocalization</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-page="/Index" asp-route-lang="@lang">@Res.HomeH1</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-page="/Privacy" asp-route-lang="@lang">@Res.PrivacyH1</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav">

                        <li class="nav-item dropdown">
                            <a href="javascript:void(0)" class="nav-link dropdown-toggle" data-bs-toggle="dropdown" data-bs-target="dd-language" aria-expanded="false">
                                Language
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end p-3" id="dd-language">
                                <li class="nav-item">
                                    <a class="nav-link" asp-page="/Index" asp-route-lang="us">English</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="/us/non-existing-path" title="Must return 404.">English - non-existing-path</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-page="/Index" asp-route-lang="fr">French</a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link" asp-page="/Index" asp-route-lang="nonsense">Nonsense root</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="/nonsense/path">Nonsense path</a>
                                </li>
                            </ul>

                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>